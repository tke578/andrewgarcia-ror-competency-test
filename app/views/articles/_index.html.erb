<table>
  <tr>
    <th>Title</th>
    <th>Category</th>
    <th>Content</th>
    <th>User</th>
    <th colspan="2"></th>
  </tr>

  <% articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.category %></td>
      <td><%= article.content %></td>
      <td><%= article.user.email %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_article_path(article) if article.is_author?(current_user) %></td>
        <td><%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } if article.is_author?(current_user) %>
         </td>
      <% end %>
    </tr>
  <% end %>
</table>